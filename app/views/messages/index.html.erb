<h1>Messages</h1>
<hr>

<% @messages.each do |message| %>
    <div>
        <%= message.content %>
        <small>Sent: <%= message.created_at.strftime("%B %d, %Y") %></small>
        <small><%= message.admin_read? ? "Read" : "Unread" %></small>
        <div>
            <% if message.reply %>
                <p><strong>Response: </strong> <%= message.reply.content %></p>
            <% end %>
        </div>
    </div>
<% end %>

<%= link_to "New Message", new_message_path %>
