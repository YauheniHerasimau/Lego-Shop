  .lego-shop {
    max-width: 800px;
    margin: 40px auto;
    padding: 20px;
    background-color:rgb(223, 223, 161);
    border: 1px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    font-family: Arial, sans-serif;
    font-size: 16px;
  }

  .select-form {
    position: absolute;
    top: 100px;
    left: 60%;
    margin-right: 10px;
