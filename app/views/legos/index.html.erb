<div class="lego-shop">
    <%= image_tag "logo.jpg", class: "logo" %>
    <h1 class="logo-label">Collection</h1>

    <div>
        <%= form_tag legos_path, method: :get, class: "select-form" do %>
            <%= select_tag :order_by, 
            options_for_select([
                ['All', 'all'],
                ['Newest', 'newest'],
                ['Sort by price', 'price'],
                ['Sort by name', 'name']
            ], params[:order_by]),
            onchange: 'this.form.submit()' %>
        <% end %>

        <% if user_signed_in? && current_user.admin? %>
        <%= link_to "Add new Lego", new_lego_path %>
        <% end %>
    </div>

    <div class="catalog">
        <% @legos.each do |lego| %>
            <%= link_to lego_path(lego), class: "lego-card" do %>
                <h2><%= lego.name %></h2>
                <p>Price: <%= number_to_currency(lego.price) %></p>
            <% end %>
        <% end %>
    </div>
</div>

