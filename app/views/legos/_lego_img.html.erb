<div class="product-card">
    <%= image_tag lego.image_url, class: "product-hover-image" %>
</div>

<style>
    .product-card {
        position: relative;
        background: white;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .product-hover-image {
        position: absolute;
        top: 100%;
        left: 0;
        width: 300px;
        height: 300px;
        opacity: 0;
        transform: translateY(-20px);
        transition: all 0.3s ease;
        z-index: 10;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: white;
    }

    .product-card:hover .product-hover-image {
        opacity: 1;
        transform: translateY(0);
    }
</style>
