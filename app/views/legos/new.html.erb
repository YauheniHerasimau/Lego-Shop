<h1>Create New LEGO Set</h1>

<%= form_with legos: @lego do |form| %>
    <div>
        <h1>Name</h1>
        <%= form.text_field :name %>
        <h1>Description</h1>
        <%= form.text_area :description %>
        <h1>Lego Set</h1>
        <%= form.text_field :lego_set %>
        <h1>Price</h1>
        <%= form.number_field :price %>
        <h1>Quantity</h1>
        <%= form.number_field :details %>
        <h1>Image URL</h1>
        <%= form.text_field :image_url %>
    </div>
    <%= form.submit %>
<% end %>
